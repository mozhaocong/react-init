{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "moduleResolution": "node",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}